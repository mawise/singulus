<div class="columns is-centered mt-4">
  <%= render 'notifications' %>
  <div class="column is-three-fifths">
    <div class="card">
      <div class="card-content">
        <div class="container has-text-centered pb-4">
          <h1 class="title has-text-dark">Edit Shortlink</h1>
        </div>

        <%= form_for(@shortlink, url: dashboard_shortlink_path(@shortlink)) do |f| %>
          <%= render partial: 'shortlink_fields', locals: { f: f } %>

          <%= f.submit "Create shortlink", class: 'button is-primary is-large is-fullwidth' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
