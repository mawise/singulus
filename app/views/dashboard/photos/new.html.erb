<main id="main" aria-role="main">
  <section class="section">
    <div class="container pb-6">
      <%= render partial: 'partials/notifications' %>
      <div class="columns mt-4">
        <div class="column"></div>

        <div class="column is-three-fifths">
          <div class="card">
            <div class="card-content">
              <div class="container has-text-centered pb-4">
                <h1 class="title has-text-dark">New Photo</h1>
              </div>

              <%= form_for(@photo) do |f| %>
                <div class="field">
                  <div class="file is-boxed">
                    <%= f.label :file, class: 'file-label' do %>
                      <%= f.file_field :file, class: 'file-input' %>
                      <span class="file-cta">
                        <span class="file-icon"><i class="fas fa-upload"></i></span>
                        <span class="file-label">Add photo</span>
                      </span>
                    <% end %>
                  </div>
                </div>

                <div class="field">
                  <%= f.label :alt, 'Alt Text', class: 'label' %>
                  <div class="control"><%= f.text_field :alt, class: 'input' %></div>
                </div>

                <div class="field is-grouped">
                  <div class="control">
                    <%= f.submit "Create photo", class: 'button is-link' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="column"></div>
      </div>
    </div>
  </section>
</main>
