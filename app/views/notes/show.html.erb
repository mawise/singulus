<main id="main" aria-role="main">
  <section class="section">
    <div class="container pb-6">
      <%= render partial: 'partials/notifications' %>
      <div class="columns mt-4">
        <div class="column"></div>

        <div class="column is-three-fifths">
          <div class="card">
            <div class="card-content">
              <article class="media">
                <div class="media-content">
                  <div class="content e-content">
                    <%= @note.content %>
                  </div>

                  <div class="content">
                    <small>
                      <%= @note.published? ? time_tag(@note.published_at) : 'Unpublished' %>
                    </small>
                  </div>

                  <nav class="level">
                    <div class="level-left">
                      <div class="level-item">
                        <%= link_to 'Edit', edit_note_path(@note), class: 'button is-info' %>
                      </div>

                      <div class="level-item">
                        <%= button_to 'Delete', note_path(@note), class: 'button is-danger', method: :delete %>
                      </div>
                    </div>
                  </nav>
                </div>
              </article>
            </div>
          </div>
        </div>

        <div class="column"></div>
      </div>
    </div>
  </div>
</main>
