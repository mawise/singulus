<% if resource.errors.any? %>
  <section class="notification is-danger">
    <h2 class="has-text-weight-bold mb-2">
      <%= t(resource_errors_key, count: resource.errors.count, resource: resource.class.model_name.human.downcase) %>
    </h2>
    <div class="content">
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </section>
<% end %>
