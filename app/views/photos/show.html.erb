<main id="main" aria-role="main">
  <section class="section">
    <div class="container pb-6">
      <%= render partial: 'partials/notifications' %>
      <div class="columns mt-4">
        <div class="column"></div>

        <div class="column is-three-fifths">
          <div class="card">
            <div class="card-content">
              <article class="media">
                <div class="media-content">
                  <figure class="image">
                    <%= image_tag @photo.file_url, alt: @photo.alt, class: 'image' %>
                  </figure>

                  <p><strong>Alt:</strong> <%= @photo.alt %></p>

                  <nav class="level">
                    <div class="level-left">
                      <div class="level-item">
                        <%= link_to 'Edit', edit_photo_path(@photo), class: 'button is-info' %>
                      </div>

                      <div class="level-item">
                        <%= button_to 'Delete', photo_path(@photo), class: 'button is-danger', method: :delete %>
                      </div>
                    </div>
                  </nav>
                </div>
              </article>
            </div>
          </div>
        </div>

        <div class="column"></div>
      </div>
    </div>
  </div>
</main>
