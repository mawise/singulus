<main id="main" aria-role="main">
  <section class="section">
    <div class="container pb-6">
      <%= render partial: 'partials/notifications' %>
      <div class="columns mt-4">
        <div class="column"></div>

        <div class="column is-three-fifths">
          <div class="card">
            <div class="card-content">
              <article class="media">
                <div class="media-content">
                  <% if @post.name.present? %><h1><%= @post.name %></h1><% end %>

                  <% if @post.summary.present? %>
                    <div class="content">
                      <small><%= @post.summary %></small>
                    </div>
                  <% end %>

                  <% if @post.content.present? %>
                    <div class="content">
                      <%= @post.content %>
                    </div>
                  <% end %>

                  <% if @post.assets.any? %>
                    <% @post.assets.each do |asset| %>
                      <% next unless asset.image? %>
                      <div class="box p-2">
                        <figure class="image">
                          <%= image_tag asset.file_url, alt: asset.alt, class: 'image' %>
                        </figure>
                        <p><strong>Alt:</strong> <%= asset.alt %></p>
                      </div>
                    <% end %>
                  <% end %>

                  <div class="content">
                    <small>
                      <%= @post.published? ? time_tag(@post.published_at) : 'Unpublished' %>
                    </small>
                  </div>

                  <nav class="level">
                    <div class="level-left">
                      <div class="level-item">
                        <%= link_to 'Edit', edit_post_path(@post), class: 'button is-info' %>
                      </div>

                      <div class="level-item">
                        <%= button_to 'Delete', post_path(@post), class: 'button is-danger', method: :delete %>
                      </div>
                    </div>
                  </nav>
                </div>
              </article>
            </div>
          </div>
        </div>

        <div class="column"></div>
      </div>
    </div>
  </div>
</main>
