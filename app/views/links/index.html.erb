<main id="main" aria-role="main">
  <section class="hero is-medium is-dark is-fullheight">
    <div class="hero-head"></div>
    <div class="hero-body">
      <div class="container has-text-centered">
        <h1 class="title"><%= link_to URI(links_url).host, links_url, class: 'has-text-light' %></h1>
        <h2 class="subtitle">This application serves links for content on <%= link_to site_name, site_url %></h2>
      </div>
    </div>
    <div class="hero-foot has-text-dark"><%= render 'footer' %></div>
  </section>
</main>
