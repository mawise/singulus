<main id="main" aria-role="main">
  <% if user_signed_in? %>
  <section class="section pt-6 pb-6">
    <div class="container">
      <%= render partial: 'partials/notifications' %>
      <h1 class="title has-text-centered">Welcome back, <%= current_user.name.split(' ').first %>!</h1>
    </div>
  </section>
  <% else %>
  <section class="hero is-medium is-dark">
    <div class="hero-body">  
      <%= render partial: 'partials/notifications' %>
      <div class="container has-text-centered">
        <h1 class="title">Nothing to see here!</h1>
        <h2 class="subtitle">This application powers dynamic content for <a href="https://tonyburns.net">tonyburns.net</a></h2>
      </div>
    </div>
  </section>
  <% end %>
</main>